@model SR.LMGM.Models.LeaveRejectData


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Reject @ViewBag.ReqId</h4>
</div>
<div class="modal-body">
    <form action="/Home/Reject" method="post">
        <div class="row">
            <div class="col-md-12 text-center">
                @*<input type="hidden" value="@ViewBag.ReqId" />*@
                @Html.HiddenFor(m => m.reqId, new {Value=ViewBag.ReqId})
                @Html.TextAreaFor(m => m.rejectDesc)
                <input type="submit" value="Reject" class="btn btn-danger pull-right" />
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
</div>
