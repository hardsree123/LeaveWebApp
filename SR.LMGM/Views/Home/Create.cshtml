@model SR.LMGM.DbModel.Leaverecords

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add</h2>

@using (Html.BeginForm("Create","Home", FormMethod.Post, new
{
